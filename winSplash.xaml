<Window x:Class="WpfSplashScreen_Licensing_.winSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSplashScreen_Licensing_"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="winSplash" Height="249" Width="915" WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    <Border Background="White" CornerRadius="10" Padding="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="StatusText" Text="Initializing..." 
                       FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="LoadingBar" Height="20" Minimum="0" Maximum="100"/>
        </StackPanel>
    </Border>
</Window>

